#!/usr/bin/env php
<?php

/**
 * @author Damien Pitard <dpitard at digitas dot fr>
 * @copyright Digitas France
 */

// This will let the permissions be 0777
//umask(0000);
set_time_limit(0);

require_once __DIR__ . '/autoload.php';
require_once __DIR__ . '/../app/Application.php';

use Symfony\Component\Console\Input\ArgvInput;
use Digex\AppAwareCommand;
use Digex\Provider\ConsoleServiceProvider;
use Digex\Provider\LazyRegisterServiceProvider;

$input = new ArgvInput();

$app = new Application();
$app->register(new LazyRegisterServiceProvider());
$app->register(new ConsoleServiceProvider());

$app['debug'] = !$input->hasParameterOption(array('--no-debug', ''));
$app['env'] = $input->getParameterOption(array('--env', '-e'), getenv('SYMFONY_ENV') ?: 'dev');

$app['console']->run();